{% extends "layout.njk" %}
{% block content %}
    <section class="login container form">
        <form method="POST" action="/users/login">
            <div class="header">
                <h3>Entrar</h3>
            </div>
            <div class="fields">
                <div class="item">
                    <div>Email
                    </div>
                    <div class="input">
                        <input type="email" name="email" placeholder="Digite o email cadastrado" 
                        value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
                        </div>
                    </div>
                </div>
                <button class="button" type="submit">Entrar</button>
                <div class="footer">
                    <ul>
                        <li><a href="/users/register">Registre-se</a></li>
                        <li><a href="/users/forgot-password">Esqueci a senha</a></li>
                    </ul>
                </div>
            </form>
        </section>
    {% endblock content %}