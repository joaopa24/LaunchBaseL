{% extends "layout.njk" %}

{% block content %}

    <section class="password container form">

        <form method="POST" action="/users/forgot-password">
            <div class="header">
                <h3>Esqueceu a senha?</h3>
            </div>

            <div class="fields">
                {% include 'session/forgot-fields.njk'%}
            </div>

            <button class="button" type="submit">Recuperar senha</button>

            <div class="footer">
                <ul>
                    <li>
                        <a href="/users/register">Registre-se</a>
                    </li>
                    <li>
                        <a href="/users/forgot-password">Esqueci a senha</a>
                    </li>
                </ul>
            </div>
        </form>
    </section>
{% endblock content %}